<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="#000000"
                                            android:layout_marginTop="16dp">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/username_textView_newMessage" app:layout_constraintStart_toEndOf="@+id/imageView_newMessageRow"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/imageView_newMessageRow" app:layout_constraintBottom_toBottomOf="@+id/imageView_newMessageRow"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/imageView_newMessageRow" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/darker_gray"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
    />
</android.support.constraint.ConstraintLayout>